var origper = "default";
winform.setInterval(
	function(){
		var per = string.split(wb.location + '#default','#')[2];
		if (per != origper) {
			if(string.indexAny(per, "BV") != null){
				win.loadForm("\dlg\player.aardio");
				publish("bvid", per);
			} else {
				win.loadForm("\dlg\space.aardio");
				
				publish("uid", string.replace(per, "UID", "") );
			}
			origper = per;
		}
	},1000
);

doLoad();

